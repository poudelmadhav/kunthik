# Docker Development Environment Variables
# Copy this file to .env.dev and customize as needed

# User permissions (automatically set by setup script)
USER_ID=1000
GROUP_ID=1000

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/kunthik_development
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=kunthik_development

# Redis
REDIS_URL=redis://redis:6379/1

# Rails
SECRET_KEY_BASE=development_secret_key_base_change_in_production
RAILS_MAX_THREADS=5
WEB_CONCURRENCY=1

# Webpacker
WEBPACKER_DEV_SERVER_HOST=webpacker

